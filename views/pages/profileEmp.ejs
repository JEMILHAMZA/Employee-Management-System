

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Management System</title>
    <!-- <link rel="stylesheet" href="/css/dashboard.css"> -->
    <link rel="stylesheet" href="/css/profileEmp.css">
    
   
    <link rel="stylesheet" href="/css/profile.css">
    
    
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/new.css">
    
    
    
</head>
<body>

   
    <!-- Include Header -->
    <%- include('../partials/header') %>
    
    <h1>Welcome, <%= employee.fullName %></h1>
    
    <main class="profile-content">
        <!-- Sidebar -->
    <%- include('../partials/empSidebar.ejs') %>
        <h2>Profile Details</h2>
        <form action="/employees/profile" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <% if (employee.picture) { %>
                    <img src="<%= employee.picture %>" alt="Employee Picture" style="width: 150px;" class="">
                <% } else { %>
                    <div class="profile-pic default-avatar"><%= employee.fullName.charAt(0).toUpperCase() %></div>
                <% } %>
                <input type="file" name="profilePicture" id="profilePicture">
            </div>
            <div class="form-group">
                <label for="fullName">Full Name:</label>
                <input type="text" name="fullName" id="fullName" value="<%= employee.fullName %>" readonly>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" value="<%= employee.email %>" readonly>
            </div>
            <div class="form-group">
                <label for="password">New Password:</label>
                <input type="password" name="password" id="password">
            </div>
            <button type="submit">Update Profile</button> 
        </form>
        
    </main>
   
<!-- Include Footer -->
<%- include('../partials/footer') %>
</body>
</html>